<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F3F6"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="188dp"
        tools:ignore="MissingConstraints">

    <LinearLayout style="@style/wrap_layout">
        <!-- 上圆角-->
        <LinearLayout
            style="@style/top_layout">

            <TextView
                android:id="@+id/my_profile2"
                style="@style/usertext"
                android:text="头像" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_header_image2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:contentDescription="@null"
                android:src="@drawable/header_image"/>

            <ImageView
                style="@style/img_arrow" />
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line" />
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">

            <TextView

                style="@style/usertext"
                android:text="昵称" />
            <TextView
                android:id="@+id/ni_name"
                style="@style/usertext"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="0.5"
                android:text="鲍鱼" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout style="@style/mid_layout">

            <TextView

                style="@style/usertext"
                android:text="性别" />
            <TextView

                style="@style/usertext"
                android:maxEms="10"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="0.5"
                android:text="男" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
        <View style="@style/bg_line" />


        <LinearLayout style="@style/mid_layout">

            <TextView
                style="@style/usertext"
                android:text="手机" />
            <TextView

                style="@style/usertext"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="0.5"
                android:text="13631432444" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
        <View style="@style/bg_line" />

        <LinearLayout style="@style/mid_layout">

            <TextView
                style="@style/usertext"
                android:text="邮箱" />
            <TextView

                style="@style/usertext"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="0.5"
                android:text="13631432444@qq.com" />

            <ImageView style="@style/img_arrow" />

        </LinearLayout>
    </LinearLayout>

        <!-- 全圆角-->
        <LinearLayout style="@style/wrap_layout">

            <LinearLayout style="@style/single_layout">

                <TextView

                    style="@style/usertext"
                    android:text="学校" />

                <TextView

                    style="@style/usertext"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="0.5"
                    android:text="华南理工大学" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>

            <View style="@style/bg_line" />

            <LinearLayout style="@style/single_layout">

                <TextView
                    style="@style/usertext"
                    android:text="学院" />

                <TextView
                    style="@style/usertext"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="0.5"
                    android:text="软件学院" />
                <ImageView style="@style/img_arrow" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>